{erl_opts, [debug_info]}.

{deps, [
  {lfe, {git, "http://github.com/rvirding/lfe", {branch, "develop"}}},
  {ltest, {git, "http://github.com/lfex/ltest", {branch, "master"}}}
]}.

{plugins, [
   {rebar3_lfe, {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "release/0.3.x"}}}
  ]}.

{profiles, [
   %% Alternatively, you can use Hex.pm instead with:
   %% $ rebar3 as hexpm compile
   {hexpm, [
     {deps, [
        {lfe, "1.2.0"}]}
      ]}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.
